{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "$ref": "core.json#"
    },
    {
      "type": "object",
      "properties": {
        "backgroundColors": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "amber",
              "blue",
              "blueGrey",
              "brown",
              "cyan",
              "deepOrange",
              "deepPurple",
              "green",
              "grey",
              "indigo",
              "lightBlue",
              "lightGreen",
              "lime",
              "orange",
              "pink",
              "purple",
              "red",
              "teal",
              "yellow"
            ]
          }
        },
        "colorLevel": {
          "type": "integer",
          "enum": [50, 100, 200, 300, 400, 500, 600, 700, 800, 900]
        },
        "fontSize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "chars": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "bold": {
          "type": "boolean"
        }
      }
    }
  ]
}
